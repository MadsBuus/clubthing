<%= render :partial => 'finder' %>

<h1>Børn</h1>

<table class="list">
  <tr>
    <th>Navn</th>
    <th>Email</th>
    <th>Klasse</th>
  </tr>

<% @children.each do |child| %>
  <tr>
    <td><%= link_to h(child.name), child %></td>
		<td><%= mail_to child.email %>
    <td><%= link_to child.klass.display, klass_path(child.klass) %></td>
    <td><%= link_to 'Ret', edit_child_path(child) %></td>
    <td><%= link_to 'Slet', child, :confirm => 'Er du sikker på du vil slette (alle konti m.v. slettes)?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Opret nyt...', new_child_path %>