		<th class="right">Total</th>
	</tr>	
<% start = @oldsum %>	
<% @lines.each do |l| %>
	<tr>
		<td><%= l.created_at.localtime.to_s %> </td>
		<td><%= l.comment %> </td>
		<td class="right">
			<%= link_to l.amount, l if l.amount > 0 %>
